<h1><%= image_tag @user.image, :size => "50x50", :align => "top"  %> <%= @user.username %></h1>

<% if @user.username == current_user.username %>
<h1 id="thats_you">That's you!</h1>
<% elsif current_user.followings.include?(@user) %>
	<%= form_for Tweet.new do |f| %>
		<%= f.submit "Unfollow", :class => "button2" %>
	<% end %> 
<% else %>
	<%= form_for Tweet.new do |f| %>
		<%= f.submit "Follow", :class => "button2" %>
	<% end %> 
<% end %>


<%= render 'tweets_list' %>
